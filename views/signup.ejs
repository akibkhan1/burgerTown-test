  <section class="Takeaway">
    <h5>Create an account to get started</h5>
    <form class="Signup-form">
      <div class="form-group">

        <div class="row">
          <div class="col">
            <input type="text" class="form-control" placeholder="First name*">
          </div>
          <div class="col">
            <input type="text" class="form-control" placeholder="Last name*">
          </div>
        </div>
        <input type="text" class="form-control" placeholder="Email Adress*">
        <input type="text" class="form-control" placeholder="Address*">

        <div class="form-row align-items-center">
          <h6>Payment Method:</h6>
          <div class="col-auto">

            <div class="checkbox">
              <label><input type="checkbox" value="">Cash on Delivery</label>
            </div>
            <div class="checkbox ">
              <label><input type="checkbox" value="credit-info">Credit Card</label>
            </div>
          </div>
          <div class="col-auto">
            <input type="text" class="form-control credit-info hide" placeholder="Credit Card Number*">

          </div>
          <input type="password" class="form-control" placeholder="Password*">


          <div class="checkbox">
            <small><input type="checkbox"> I want to be notifies about updates through emails</small>
          </div>
          <div class="checkbox">
            <small><input type="checkbox"> I agree with the terms and conditions of Burger Town</small>

          </div>
        </div>
        <div class="SignIn">
          <p>Have an Account? <a href="#">Sign In</a></p>
        </div>


        <button type="submit" class="btn btn-warning">SIGN UP</button>
    </form>
  </section>

